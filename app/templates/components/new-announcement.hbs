{{#if addNewAnnouncement}}
<h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="admin">Admin</label>
        {{input value=admin id="admin"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type="date" value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Announcement</label>
        {{textarea value=body id="body"}}
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
